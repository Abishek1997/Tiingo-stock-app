<resources>
    <style name="ToolbarTheme">
        <item name="android:background">@color/activity_background_color</item>
        <item name="android:textColorPrimary">@color/toolbar_title_color</item>
        <item name="android:textColorSecondary">@color/toolbar_subtitle_color</item>
    </style>

    <style name="Theme.AppCompat.DayNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="primaryTextColor">@color/toolbar_title_color</item>
        <item name="secondaryTextColor">@color/toolbar_subtitle_color</item>
    </style>

    <style name="ActivityTheme" parent="Theme.AppCompat.DayNight">
        <item name="backgroundActivityColor">@color/activity_background_color</item>
    </style>

    <style name="splashScreenTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>